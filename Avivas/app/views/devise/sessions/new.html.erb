<div style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #f8f9fa;">
  <div style="max-width: 400px; width: 100%; padding: 20px; background-color: #ffffff; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
    <h2 style="text-align: center; margin-bottom: 20px; font-size: 24px; color: #333;">Iniciar Sesion</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { style: "display: flex; flex-direction: column;" }) do |f| %>
      <div style="margin-bottom: 15px;">
        <%= f.label :email, style: "font-weight: bold; margin-bottom: 5px; display: block;" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;" %>
      </div>

      <div style="margin-bottom: 15px;">
        <%= f.label :password, style: "font-weight: bold; margin-bottom: 5px; display: block;" %>
        <%= f.password_field :password, autocomplete: "current-password", style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div style="margin-bottom: 15px; display: flex; align-items: center;">
          <%= f.check_box :remember_me, style: "margin-right: 10px;" %>
          <%= f.label :remember_me, style: "font-weight: bold;" %>
        </div>
      <% end %>

      <div style="text-align: center;">
        <%= f.submit "Log in", style: "width: 100%; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;" %>
      </div>
    <% end %>

    <div style="margin-top: 10px; text-align: center;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
